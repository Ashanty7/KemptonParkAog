<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:enterFadeDuration="300" android:exitFadeDuration="300">
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="24dp" />
            <gradient android:angle="45" android:endColor="@color/orange" android:startColor="@color/yellow_2" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="24dp" />
            <gradient android:angle="45" android:endColor="@color/orange" android:startColor="@color/yellow_2" />
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <corners android:radius="24dp" />
            <gradient android:angle="45" android:endColor="@color/orange" android:startColor="@color/yellow_2" />
        </shape>
    </item>

</selector>